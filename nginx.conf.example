# Nginx Configuration Example for (J)ai Kisan
# Save this file to: /etc/nginx/sites-available/jai-kisan
# Then create symlink: sudo ln -s /etc/nginx/sites-available/jai-kisan /etc/nginx/sites-enabled/

# HTTP Server (redirects to HTTPS)
server {
    listen 80;
    listen [::]:80;
    server_name aienter.in www.aienter.in;

    # Redirect all HTTP traffic to HTTPS
    return 301 https://$server_name$request_uri;
}

# HTTPS Server
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name aienter.in www.aienter.in;

    # SSL Certificate (Let's Encrypt recommended)
    ssl_certificate /etc/letsencrypt/live/aienter.in/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/aienter.in/privkey.pem;
    
    # SSL Configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # Root directory (for static files)
    root /home/ubuntu/Jai_Kisan;

    # Logging
    access_log /var/log/nginx/jai-kisan-access.log;
    error_log /var/log/nginx/jai-kisan-error.log;

    # Remove default index files (fixes Hostinger default page issue)
    # Delete any index.html, index.php in the web root
    
    # Main application proxy
    location / {
        proxy_pass http://127.0.0.1:5000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket support (if needed later)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Static files
    location /static {
        alias /home/ubuntu/Jai_Kisan/static;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }

    # Public assets (images, logos)
    location /public {
        alias /home/ubuntu/Jai_Kisan/public;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }

    # Deny access to sensitive files
    location ~ /\. {
        deny all;
    }

    location ~ \.(env|git|gitignore)$ {
        deny all;
    }

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/json application/xml;
}
